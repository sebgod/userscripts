" vim: ft=vim ts=2 sw=2 et wm=0 tw=0
syntax on
filetype plugin indent on
set autoindent
set smartcase
set smarttab
set expandtab
set softtabstop=4
set tabstop=4
set shiftwidth=4
set incsearch
set autowrite
set hidden
set showcmd
set mouse=a
set modeline
if exists('+relativenumber') && (v:version > 703)
   set rnu
   set number
endif
set laststatus=2
set backspace=indent,eol,start
set nocompatible
set history=50
set suffixes=.bak,~,.swp,.o,.info.aux.log,.dvi,.bbl,.blg,.brf,.cb,.idx,.ilg,.inx,.out,.toc,.mh,.err,.init
set pastetoggle=<F2>

" Mercury syntax config
let mercury_no_highlight_overlong = 1
" let mercury_no_syntax_fold = 1

" disable that annoying visual/audible bell
set noerrorbells
set novisualbell
set t_vb=
autocmd! GUIEnter * set vb t_vb=

" :let g:html_no_progress=1
let g:html_use_encoding="UTF-8"

autocmd QuickFixCmdPost [^1]* nested cwindow
autocmd QuickFixCmdPost    1* nested lwindow

if has("autocmd")
  au BufReadPost * if line("'\"") > 1 && line("'\"") <= line("$") | exe "normal! g'\"" | endif
endif

if has("multi_byte")
  set encoding=utf-8                     " better default than latin1
  setglobal fileencoding=utf-8           " change default file encoding when writing new files
  if &termencoding == ""
    let &termencoding = &encoding
  endif
endif

map <F12> :vertical wincmd f<CR>
auto BufEnter * :set title | let &titlestring = 'v:' . expand('%')
auto VimLeave * :set t_ts=k\
